generator client {
  provider = "prisma-client-js"
  // output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  image       String?
  slug        String   @unique
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String
}

model Category {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  products    Product[]
}